<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView">
        <LinearLayout
                      android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent">
    <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:id="@+id/linearLayout">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Пользователь"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal|top"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/name"
                android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Баланс"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal|top"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/balance"
                android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#ffd353">

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Пополнить баланс на:"
                android:id="@+id/textView3"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/linearLayout5"
                android:paddingTop="@dimen/activity_horizontal_margin">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:text="1 рубль"
                    android:id="@+id/button9"
                    android:layout_weight="0.5"
                    />

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:text="5 рублей"
                    android:id="@+id/button10"
                    android:layout_weight="0.5"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/linearLayout2"
                android:paddingTop="@dimen/activity_horizontal_margin">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:text="10 рублей"
                    android:id="@+id/button"
                    android:layout_weight="0.5"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:text="50 рублей"
                    android:id="@+id/button2"
                    android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/linearLayout3"
                android:paddingTop="@dimen/activity_horizontal_margin">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:text="100 рублей"
                    android:id="@+id/button3"
                    android:layout_weight="0.5"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:text="500 рублей"
                    android:id="@+id/button4"
                    android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/linearLayout4"
                android:paddingTop="@dimen/activity_horizontal_margin">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:text="1000 рублей"
                    android:id="@+id/button5"
                    android:layout_weight="0.5"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:text="5000 рублей"
                    android:id="@+id/button6"
                    android:layout_weight="0.5"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>